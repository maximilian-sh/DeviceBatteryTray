<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LGSTrayUI"
                    xmlns:tb="http://www.hardcodet.net/taskbar">
	<ContextMenu x:Shared="True" x:Key="SysTrayMenu">
        <MenuItem Header="Devices" ItemsSource="{Binding LogiDevices}">
            <MenuItem.ItemContainerStyle>
                <Style TargetType="MenuItem">
                    <Setter Property="IsCheckable" Value="True"/>
                    <Setter Property="IsChecked" Value="{Binding IsChecked}"/>
                    <Setter Property="StaysOpenOnClick" Value="True"/>
                    <Setter Property="Command">
                        <Setter.Value>
                            <Binding Path="DataContext.DeviceClickedCommand" RelativeSource="{RelativeSource AncestorType=ContextMenu}"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="CommandParameter" Value="{Binding RelativeSource={RelativeSource Self}}" />
                </Style>
            </MenuItem.ItemContainerStyle>
            <MenuItem.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DeviceName}"/>
                    </StackPanel>
                </DataTemplate>
            </MenuItem.ItemTemplate>
        </MenuItem>
        <MenuItem Header="Rediscover Devices" Command="{Binding RediscoverDevicesCommand}" IsEnabled="{Binding RediscoverDevicesEnabled}"/>
        <MenuItem Header="Display Numeric Icon" IsCheckable="True" IsChecked="{Binding NumericDisplay}" StaysOpenOnClick="True" />
        <MenuItem Header="Autostart with Windows" IsCheckable="True" IsChecked="{Binding AutoStart}" StaysOpenOnClick="True" />
        <Separator />
        <MenuItem Header="Check for Updates" Command="{Binding CheckForUpdatesCommand}" IsEnabled="{Binding CheckingForUpdates, Converter={x:Static local:BoolToInverseBoolConverter.Instance}}" StaysOpenOnClick="True" />
        <MenuItem Header="{Binding AvailableUpdateVersion}" Command="{Binding DownloadAndInstallUpdateCommand}" IsEnabled="{Binding UpdateAvailable}" Visibility="{Binding UpdateAvailable, Converter={x:Static local:BoolToVisibilityConverter.Instance}}" StaysOpenOnClick="True" />
        <MenuItem Header="Auto-check for Updates" IsCheckable="True" IsChecked="{Binding AutoUpdateEnabled}" StaysOpenOnClick="True" />
        <Separator />
        <MenuItem Header="{Binding AssemblyVersion}" IsEnabled="False" />
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <local:ThemeBrushConverter x:Key="ThemeBrushConverter" />
    <local:BoolToInverseBoolConverter x:Key="BoolToInverseBoolConverter" />
    <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <tb:TaskbarIcon x:Key="NotifyIcon"
                    ContextMenu="{StaticResource SysTrayMenu}">
    </tb:TaskbarIcon>
</ResourceDictionary>